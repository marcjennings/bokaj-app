<div class="container" id="forgot-password">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-md-offset-1">
      <h4>Forgot your <br> password?</h4>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
    </div>
  </div>

  <div class="row row-centered text-center">  
   <div class="col-sm-12 col-md-4 col-md-offset-4">
      <div class="field">
        <p id="p01-white"><%= f.label :email %><br /></p>
        <%= f.email_field :email, autofocus: true %>
      </div>

    <div class="actions">
      <%= f.submit "Reset password", class: 'btn btn-sm' %>
    </div>

    <% end %>
<!--  <%= render "devise/shared/links" %> --> <!-- * links to be removed when finalised * -->

    </div>
  </div> 

</div> <!-- end container -->
