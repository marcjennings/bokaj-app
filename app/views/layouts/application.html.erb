<!DOCTYPE html>
<html lang="en">
<name="shop">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <title>BokajApp</title>
  

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


  
  
</head>

  <body class="<%= controller_name + ' ' + action_name %>">



  <!-- navbar starts here -->
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>            
        </button>
        <div class="navbar-brand">
          <%= link_to root_path do %>
            <%= image_tag ("res-series-sm.svg"), class:"img-responsive"%> 
          <% end %>
        </div>
      </div> <!--end navbar header -->
            
      <div class="collapse navbar-collapse" id="myNavbar">
        <form class="navbar-form navbar-right" role="search">
          
          <div class="form-group">
            <%= form_tag("/products", method: "get") do %>
              <%= text_field_tag(:q) %>
              <%= submit_tag("Search") %>
            <% end %>
          </div>
        </form>
        
        <ul class="nav navbar-nav navbar-right" style="clear:both;">
          <li>
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            <% else %>
              <%= link_to('Login', new_user_session_path) %>
            <% end %>
          </li>
          <li><%= link_to "About", static_pages_about_path %></li>
          <li><%= link_to "Contact", static_pages_contact_path %></li>
        </ul>
      </div> <!-- end collapse navbar -->
     </div> <!-- end container fluid -->
  </nav> <!-- end navbar -->


<%= yield %>

    <!-- footer -->
    <footer class="footer">
      
        <div class="footer-copyright">
          <p>&copy;Marc Jennings 2015</p>
        </div>
      
    </footer>
    <!-- end footer -->


</body>
</html>
