<div class="container-fluid">
  <div class="row" id="intro">
    <div class="col-sm-12 col-md-10 col-md-offset-1">
      <h4>A half marathon,<br>10k &amp; 5k race at<br> Derwent Reservoir.</h4>
    </div>

    <div class="col-sm-12 col-md-4 col-md-offset-4" id="home-date">
      <h3>31.01.2016</h3>
    </div>
  </div> <!-- end intro -->


  <div class="row" id="reg-btn">
    <div class="col-sm-12 col-md-5">
      <hr class="style2">
    </div>

    <div class="col-sm-12 col-md-2" id="register-btn">
      <div class="text-center">
        <%= link_to "REGISTER", races_path, class: "btn btn-lg" %>
      </div>
    </div>

    <div class="col-sm-12 col-md-5">
      <hr class="style2">
    </div>
      
  </div> <!-- reg-btn row ends -->

  <div class="row">
    <div class="col-sm-12 col-md-10 col-md-offset-1" id="alerts">
      <% if notice %>
        <div class="alert alert-info" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4><%= notice %></h4>
        </div>
      <% end %>

      <% if alert %>
      <div class="alert alert-info">
        <%= alert %>
      </div>
      <% end %>
    </div> <!-- ends alerts -->
  </div>

</div> <!-- end container-fluid -->

