<div class="container" id="products-table">
  <p id="notice"><%= notice %></p>

  <h1>LISTING PRODUCTS</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image url</th>
        <th>Fee</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
      <% cache(cache_key_for_products) do %>
      <%= render @products %>
      <% end %> <!-- end cache -->
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path %>

</div>
